# Copy to .env and fill in values

# BigQuery
GCP_PROJECT_ID=your-gcp-project-id
GCP_SA_KEY=base64-encoded-service-account-json

# For dbt local development (path to JSON file)
# Put your service account JSON in .secrets/ (gitignored)
GCP_SA_KEY_FILE=.secrets/gcp-service-account.json

# Linear
LINEAR_API_KEY=lin_api_xxxxx

# GitHub (Personal Access Token with repo and read:org scopes)
GITHUB_TOKEN=ghp_xxxxx
ORGANIZATION=your-org-name
REPOSITORIES=repo1,repo2

# Oura
OURA_API_TOKEN=xoxo_love_u

# Google Trends (via pytrends)
# Comma-separated list of keywords to track
TRENDS_KEYWORDS=campaign,election,vote

# Cloudflare Workers AI (for sentiment analysis)
# Get these from your Cloudflare dashboard
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_WORKERS_AI_TOKEN=your-api-token

# Streamlit deployment mode
# "local" = show all pages (default)
# "public" = hide pages with PII (Linear, GitHub)
DEPLOYMENT_MODE=local
